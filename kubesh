#!/bin/bash

set -a

HOME_PATH="$(dirname "$0")"

source "$HOME_PATH/.env"
if [ -f "$PWD/kubesh.env" ]; then
    source "$PWD/kubesh.env"
fi

# Load .env from the calling directory
if [ ! -f "$PWD/$DOT_ENV" ]; then
    echo "'$PWD/$DOT_ENV' not found!"
    exit
fi
source "$PWD/$DOT_ENV"

# Merge docker, minikube abd kube environments into one
MINIKUBE_AND_KUBE_ENVIRONMENTS=( "${MINIKUBE_ENVIRONMENTS[@]}" "${KUBE_ENVIRONMENTS[@]}" )
ALL_ENVIRONMENTS=( "${DOCKER_ENVIRONMENTS[@]}" "${MINIKUBE_AND_KUBE_ENVIRONMENTS[@]}" )
# Evaluate all environments
for i in "${ALL_ENVIRONMENTS[@]}"
do
	eval $i
done

source "$HOME_PATH/scripts/variables.env"
source "$HOME_PATH/scripts/common.sh"
source "$HOME_PATH/scripts/build.sh"
source "$HOME_PATH/scripts/run.sh"
source "$HOME_PATH/scripts/stop.sh"
source "$HOME_PATH/scripts/ssh.sh"
source "$HOME_PATH/scripts/log.sh"
source "$HOME_PATH/scripts/ls.sh"
source "$HOME_PATH/scripts/url.sh"
source "$HOME_PATH/scripts/docker.sh"
source "$HOME_PATH/scripts/gcloud.sh"
source "$HOME_PATH/scripts/kubernetes.sh"
source "$HOME_PATH/scripts/main.sh"

usage